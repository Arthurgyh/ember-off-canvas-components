{{#eoc-viewport as |eocViewport|}}
  {{#on-canvas target=eocViewport}}
    {{#off-canvas-opener useToggle=true target=target}}
      <i class="fa fa-bars"></i>
    {{/off-canvas-opener}}
    <br>
    <div class="on-canvas-body">
      {{outlet}}
    </div>
  {{/on-canvas}}
  {{#off-canvas target=eocViewport}}
    {{#off-canvas-closer target=target}}
      <i class="fa fa-times"></i>
    {{/off-canvas-closer}}
    <br>
    <div class="off-canvas-body">
      {{outlet "off-canvas"}}
    </div>
  {{/off-canvas}}
{{/eoc-viewport}}
